<aura:component controller="DragNDropController"
                implements="flexipage:availableForAllPageTypes,force:hasRecordId">
    
    <aura:attribute name="recordId" type="Id"/>
	
    <!-- Default image for dropper -->
    <aura:attribute name="image" type="String" 
            default="https://i.imgur.com/1RM15yn.jpg"/>

    <!-- Boolean that makes delete button invisible -->
    <aura:attribute name='renderNew' type='Boolean' default='false'/>
    
    <aura:handler name="init" value="{!this}" action="{!c.onInit}" />
        
 
    <lightning:layout >
	    <div ondragover="{!c.onDragOver}" ondrop="{!c.onDrop}">
            <img src="{!v.image}"/>

    		<lightning:layoutItem class="slds-grid_vertical-align-center" padding="horizontal-medium" >
            	<aura:if isTrue="{!v.renderNew}">
                	<lightning:button variant="destructive" label="Delete" onclick="{!c.deletePicture}" 
                		aura:id="myButton"/>
              	</aura:if>
        	</lightning:layoutItem> 

	    </div>
	</lightning:layout>
    
</aura:component>